{{#ifwith resume.certificates}}
	<section>
		<header>
			<h2>Certificates</h2>
		</header>
		<ul id="certificates-list">
			{{#each this}}
				<li>
					<header>
						<div class="flex-between">
							{{#if name}}
								<h3>{{name}}</h3>
							{{/if}}
							{{#if date}}
								<span>{{date}}</span>
							{{/if}}
						</div>
						{{#if issuer}}
							<span>{{issuer}}</span>
						{{/if}}
						{{#if url}}
							<a target="_blank" href="{{url}}">
								<span class="fas fa-external-link-alt"></span>
							</a>
						{{/if}}
					</header>
				</li>
			{{/each}}
		</ul>
	</section>
{{/ifwith}}
{{#ifwith resume.publications}}
	<section>
		<header>
			<h2>Publications</h2>
		</header>
		<ul id="publications-list">
			{{#each this}}
				<li>
					<header>
						<div class="flex-between">
							<h3>
								{{#if name}}
									<span>{{name}}</span>
								{{/if}}
								{{#if publisher}}
									<span>| {{publisher}}</span>
								{{/if}}
							</h3>
							{{#if releaseDate}}
								<span>{{releaseDate}}</span>
							{{/if}}
						</div>
						{{#if url}}
							<a target="_blank" href="{{url}}">{{url}}</a>
						{{/if}}
					</header>
					{{#if summary}}
						<p>{{summary}}</p>
					{{/if}}
				</li>
			{{/each}}
		</ul>
	</section>
{{/ifwith}}